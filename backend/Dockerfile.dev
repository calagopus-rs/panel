# Development Dockerfile for Panel Backend
FROM rust:1.85-bookworm as builder

# Install system dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy workspace files
COPY ../Cargo.toml ../Cargo.lock ./
COPY ../rule-validator ./rule-validator
COPY ../wings-api ./wings-api

# Copy backend source
COPY . ./backend

# Set working directory to backend
WORKDIR /app/backend

# Build the application in release mode for better performance
RUN cargo build --release

# Runtime stage
FROM debian:bookworm-slim

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    ca-certificates \
    libssl3 \
    && rm -rf /var/lib/apt/lists/*

# Create app user
RUN useradd -r -s /bin/false panel

# Set working directory
WORKDIR /app

# Copy the binary from builder stage
COPY --from=builder /app/backend/target/release/panel-rs /app/panel-rs

# Static files directory doesn't exist, skipping copy

# Create logs directory and change ownership
RUN mkdir -p /app/logs && chown -R panel:panel /app

# Switch to app user
USER panel

# Expose port
EXPOSE 8000

# Set environment variables
ENV RUST_LOG=info
ENV BIND=0.0.0.0
ENV PORT=8000

# Run the application
CMD ["./panel-rs"]