# Development Dockerfile for Panel Backend
FROM rust:1.85-bookworm as builder

# Install system dependencies
RUN apt-get update && apt-get install -y \
    pkg-config \
    libssl-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy workspace files (available from build context root)
COPY panel/Cargo.toml panel/Cargo.lock ./
COPY panel/rule-validator ./rule-validator
COPY panel/wings-api ./wings-api

# Copy backend source structure
COPY panel/backend/Cargo.toml ./backend/
COPY panel/backend/build.rs ./backend/

# Create a dependency cache by building just dependencies first
WORKDIR /app/backend
RUN mkdir src && echo "fn main() {}" > src/main.rs
RUN cargo build --release
RUN rm -rf src

# Copy the actual source code
COPY panel/backend/src ./src

# Copy required assets and data
COPY panel/frontend/dist ./frontend/dist
COPY panel/database ./database  
COPY panel/backend/static ./static

# Verify assets are in the right places
RUN ls -la ./frontend/dist/ && ls -la ./database/ && ls -la ./static/

# Build the application in release mode
RUN cargo build --release

# Runtime stage
FROM debian:bookworm-slim

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    ca-certificates \
    libssl3 \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create app user
RUN useradd -r -s /bin/false panel

# Set working directory
WORKDIR /app

# Copy the binary from builder stage
COPY --from=builder /app/target/release/panel-rs /app/panel-rs

# Static files directory doesn't exist, skipping copy

# Create logs directory and change ownership
RUN mkdir -p /app/logs && chown -R panel:panel /app

# Switch to app user
USER panel

# Expose port
EXPOSE 8000

# Set environment variables
ENV RUST_LOG=info
ENV BIND=0.0.0.0
ENV PORT=8000

# Run the application
CMD ["./panel-rs"]